{
  "name": "react-ssr",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "scripts": {
    "build:client": "vite build --outDir ./dist/client",
    "build:server": "vite build --outDir ./dist/server --ssr ./src/entry-server.tsx",
    "build": "npm run build:client && npm run build:server",
    "dev": "npm run build && ts-node --esm server.ts",
    "start": "ts-node --esm server.ts",
    "prepare": "husky install",
    "lint": "eslint **/*.ts",
    "lint-fix": "eslint --fix **/*.ts",
    "format": "prettier -w .",
    "postinstall": "husky install",
    "test:jest": "jest --coverage",
    "cy": "cypress run --e2e",
    "test:cy": "start-server-and-test start http://localhost:3001 cy && npm run nyc",
    "nyc": "npx nyc report --reporter=text-summary"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "@types/react-redux": "^7.1.25",
    "@types/react-router-dom": "5.3.3",
    "abort-controller": "^3.0.0",
    "cross-fetch": "^3.1.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "6.8.2",
    "redux": "^4.2.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node-fetch": "^2.6.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/redux-mock-store": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-react": "^3.1.0",
    "cypress": "^12.11.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.2",
    "msw": "^1.2.1",
    "nanoid": "^4.0.2",
    "node-fetch": "^2.6.7",
    "prettier": "2.8.4",
    "react-hook-form": "^7.43.8",
    "react-uid": "^2.3.2",
    "redux-mock-store": "^1.5.4",
    "start-server-and-test": "^2.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-istanbul": "^4.0.1",
    "vitest": "^0.30.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,scss,md,html}": [
      "prettier -w ",
      "git add"
    ]
  }
}
